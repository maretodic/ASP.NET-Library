@model IEnumerable<MVC_Library.Models.Book>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Books</h2>
<table id="books" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>
                Book
            </th>
            <th>
                Genre
            </th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#books").DataTable({
                ajax: {
                    url: "/api/books/",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "title"
                    },
                    {
                        data: "genre.name"
                    }
                ]
            });
        });
    </script>
}

