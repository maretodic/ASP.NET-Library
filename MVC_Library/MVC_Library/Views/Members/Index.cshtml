@model IEnumerable<MVC_Library.Models.Member>
@{
    ViewBag.Title = "Members";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Members</h2>
<table id="members" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Member</th>
            <th>Membership Type</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var member in Model)
        {
            <tr>
               <td>@Html.ActionLink(member.Name, "Edit", "Customers", new { id = member.ID}, null)</td>
                    <td>@member.MembershipType.Name</td>
                    <td>
                        <button data-customer-id="@member.ID" class="btn-link js-delete">
                            Delete
                        </button>
                    </td>
            </tr>
        }
    </tbody>
</table>

